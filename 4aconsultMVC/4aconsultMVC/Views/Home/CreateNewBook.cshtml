@model _4aconsultMVC.Models.Book;

@{
    ViewData["Title"] = "New book form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css" />


<br />
<div class="view">

    <div class="row form-horizontal">
        <div class="col-md-12">
            <p align="center"><h4>Страница создания новой книги</h4></p>
            <br />

            <div id="fieldPass" style="display: block;">

                @using (Html.BeginForm("CreateNewBook", "Home"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <hr width="300" />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <h5>Название </h5>
                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />


                    <hr width="300" />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <h5>Автор</h5>
                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />


                    <hr width="300" />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <h5>Год издания </h5>
                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />


                    <hr width="300" />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <h5>Цена</h5>
                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />

                    <br/><br/>
                    <hr width="300" />
                    <div class="form-group">
                        <input type="submit" value="Сохранить изменения" class="btn btn-outline-success" />
                    </div>
                    <br/>
                    <br/>
                }

                <br /><br /><br />
            </div>
        </div>
    </div>
</div>




